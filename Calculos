    private void TxfTotalMouseEntered(java.awt.event.MouseEvent evt) {                                      
        // TODO add your handling code here:
         DecimalFormat numberFormat = new DecimalFormat("#.0");
  double nEnvio = Double.parseDouble(TxfEnvio.getText());
  double nPulseras = Double.parseDouble(TxfPricePulsera.getText());     

    double suma = nEnvio + nPulseras;
    String sumaa;
        sumaa = String.valueOf(numberFormat.format(suma));

    TxfTotal.setText(sumaa);
    }                                     

