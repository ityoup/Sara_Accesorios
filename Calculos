        // TODO add your handling code here:
    }                                           

    private void cmbBahiaItemStateChanged(java.awt.event.ItemEvent evt) {                                          
        // TODO add your handling code here:
        String Ciudad2=(String)cmbBahia.getSelectedItem();
        if(Ciudad2.equals("BucerÃ­as")){
        TxfEnvio.setText("50");
        LbPrecio.setVisible(true);
        TxfEnvio.setVisible(true);
        }
        else if (Ciudad2.equals("San Vicente")){
        TxfEnvio.setText("60");
        LbPrecio.setVisible(true);
        TxfEnvio.setVisible(true);
        
        }
        else if(Ciudad2.equals("Mezcales")){
        TxfEnvio.setText("70");
        LbPrecio.setVisible(true);
        TxfEnvio.setVisible(true);
        
        }
    }                                         

