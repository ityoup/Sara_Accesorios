    private void cmbEntregasItemStateChanged(java.awt.event.ItemEvent evt) {                                             
        // TODO add your handling code here:
        String Ciudad=(String)cmbEntregas.getSelectedItem();
        if(Ciudad.equals("Puerto Vallarta")){
            jLabel2.setVisible(true);
            cmbVallarta.setVisible(true);
            
            jLabel3.setVisible(false);
        cmbBahia.setVisible(false);
        }
        else if (Ciudad.equals("BahÃ­a de banderas")){
        jLabel3.setVisible(true);
        cmbBahia.setVisible(true);
        
        jLabel2.setVisible(false);
            cmbVallarta.setVisible(false);
    
    }
    }                                            

    private void cmbVallartaItemStateChanged(java.awt.event.ItemEvent evt) {                                             
        // TODO add your handling code here:
        //int CostoJuntas = 40;
        String Ciudad1=(String)cmbVallarta.getSelectedItem();
        if(Ciudad1.equals("Crucero de las juntas")){
            TxfEnvio.setText("40");
        LbPrecio.setVisible(true);
            TxfEnvio.setVisible(true);
            //TxfJuntas.setEnabled(false);
        
        }
        else if(Ciudad1.equals("GalerÃ­as")){
        TxfEnvio.setText("20");
        TxfEnvio.setVisible(true);
        LbPrecio.setVisible(true);
        }
        
        else if(Ciudad1.equals("La isla")){
        TxfEnvio.setText("30");
        LbPrecio.setVisible(true);
        TxfEnvio.setVisible(true);
            
        }
        else if(Ciudad1.equals("Plaza Caracol")){
        TxfEnvio.setText("45");
        LbPrecio.setVisible(true);
        TxfEnvio.setVisible(true);
            
        }
    }                                            

