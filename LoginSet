    private void btnAceptarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:

        String Usuario = "Juan"; String Usuario2 = "Silvia";
        String Contra = "contra"; String Contra2 = "12345";
        

        

        if(TxField.getText().equals(Usuario)&&TxFieldPass.getText().equals(Contra)){

            Acceso P1 = new Acceso();
            P1.setVisible(true);
            JOptionPane.showMessageDialog(null, "Bienvenido al sistema Juan");
            dispose();
            
            

        }
        else if (TxField.getText().equals(Usuario2)&&TxFieldPass.getText().equals(Contra2)){
            Acceso P1 = new Acceso();
            P1.setVisible(true);
            JOptionPane.showMessageDialog(null, "Bienvenido al sistema Silvia");
            dispose();
    }
        else if (TxField.getText().equals("")&&TxFieldPass.getText().equals("")){
        
        Icon Icono = new ImageIcon(getClass().getResource("/Imagenes/tache.png"));
        JOptionPane.showMessageDialog(rootPane, "Ingrese un USUARIO y una CONTRASEÃ‘A", "ERROR", JOptionPane.WARNING_MESSAGE, Icono);
        }
        else if(TxField.getText().equals("")){
        
        Icon Icono = new ImageIcon(getClass().getResource("/Imagenes/tache.png"));
        JOptionPane.showMessageDialog(rootPane, "Ingrese un USUARIO", "ERROR", JOptionPane.WARNING_MESSAGE, Icono);
        
        }
        else if(TxFieldPass.getText().equals("")){
     
        Icon Icono = new ImageIcon(getClass().getResource("/Imagenes/tache.png"));
        JOptionPane.showMessageDialog(rootPane, "Ingrese una CONTRASEÃ‘A", "ERROR", JOptionPane.WARNING_MESSAGE, Icono);
        
        }
        else {
            Icon Icono = new ImageIcon(getClass().getResource("/Imagenes/tache.png"));
            JOptionPane.showMessageDialog(rootPane, "DATOS INCORRECTOS", "ERROR", JOptionPane.WARNING_MESSAGE, Icono);
            
        }

    }                                          

